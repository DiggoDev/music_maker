{
	"name": "my-app",
	"version": "0.1.0",
	"private": true,
	"author": {
		"name": "Diggodev"
	},
	"main": "electron-build/main.js",
	"scripts": {
		"start": "react-scripts start",
		"start-electron": "electron .",
		"build": "react-scripts build",
		"build-electron-dev": "webpack --config webpack.main.config.js",
		"build-electron": "electron-builder build --publish never",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "eslint --ext .ts,.tsx .",
		"lint:fix": "eslint --fix --ext .ts,.tsx .",
		"format": "prettier --write ./src"
	},
	"dependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^13.5.0",
		"@types/jest": "^27.5.2",
		"@types/node": "^16.18.26",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1",
		"typescript": "^4.9.5",
		"web-vitals": "^2.1.4"
	},
	"devDependencies": {
		"clean-webpack-plugin": "^4.0.0",
		"electron": "^24.2.0",
		"electron-builder": "^23.6.0",
		"eslint": "^8.40.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-react": "^7.32.2",
		"mini-css-extract-plugin": "^2.7.5",
		"node-polyfill-webpack-plugin": "^2.0.1",
		"prettier": "^2.8.8",
		"ts-loader": "^9.4.2",
		"webpack": "^5.82.0",
		"webpack-cli": "^5.1.0"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"build": {
		"appId": "com.diggodev.music_maker",
		"mac": {
			"category": "com.diggodev.music_maker.category.type"
		},
		"compression": "maximum",
		"directories": {
			"buildResources": "build"
		},
		"dmg": {
			"contents": [
				{
					"x": 110,
					"y": 150
				},
				{
					"x": 480,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			]
		},
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowElevation": true,
			"allowToChangeInstallationDirectory": true,
			"runAfterFinish": true
		}
	}
}
